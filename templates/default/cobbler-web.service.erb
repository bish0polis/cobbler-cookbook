[Unit]
Description=uWSGI instance for Cobbler WebUI
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
ExecStartPre=/bin/bash -c "/bin/sleep 5 ; /bin/chown -R <%= node['nginx']['user'] %>:<%= node['nginx']['group'] %> /var/lib/cobbler/web.ss /var/lib/cobbler/webui_sessions"
ExecStart=/sbin/uwsgi /etc/uwsgi/cobbler_web.ini
ExecStopPost=/usr/bin/rm /run/cobbler_web.sock

[Install]
WantedBy=multi-user.target
